<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Restaurant2Activity">

    <TextView
        android:id="@+id/reviewDisplay2"
        android:layout_width="356dp"
        android:layout_height="167dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="30dp"
        android:background="#CECECE"
        android:padding="6dp"
        android:text=""
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurant2Button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/restaurant2Button"
        android:layout_width="351dp"
        android:layout_height="54dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="lut buffet"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoButton2" />
    <Button
        android:id="@+id/backButton1"
        android:layout_width="116dp"
        android:layout_height="47dp"
        android:layout_marginStart="158dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="82dp"
        android:background="@color/colorPrimaryDark"
        android:text="back"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reviewButton1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />


    <ImageButton
        android:id="@+id/infoButton2"
        android:layout_width="38dp"
        android:layout_height="37dp"
        android:layout_marginStart="343dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toTopOf="@+id/restaurant1Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/reviewButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewDisplay2"
        app:layout_constraintVertical_bias="0.733"
        app:srcCompat="@android:drawable/ic_input_add" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is useful"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textVotes"
        app:layout_constraintTop_toBottomOf="@+id/reviewDisplay2" />

    <TextView
        android:id="@+id/textVotes"
        android:layout_width="74dp"
        android:layout_height="27dp"
        android:text="Votes: "
        app:layout_constraintEnd_toStartOf="@+id/checkBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewDisplay2" />

</androidx.constraintlayout.widget.ConstraintLayout>